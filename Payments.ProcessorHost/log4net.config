<log4net debug="false">
  <appender name="consoleAppender" type="log4net.Appender.ConsoleAppender">
    <layout type="log4net.Layout.PatternLayout,log4net">
      <param name="ConversionPattern" value="%date %5level %logger - %message%newline"/>
    </layout>
  </appender>
  <appender name="defaultAppender" type="log4net.Appender.RollingFileAppender,log4net">
    <param name="File" value="/home/admin/logs/conference/PaymentProcessorHost.txt"/>
    <param name="Encoding" value="utf-8"/>
    <param name="AppendToFile" value="true"/>
    <param name="RollingStyle" value="Date"/>
    <param name="DatePattern" value="yyyy-MM-dd"/>
    <param name="StaticLogFileName" value="true"/>
    <param name="CountDirection" value="1"/>
    <layout type="log4net.Layout.PatternLayout,log4net">
      <param name="ConversionPattern" value="%date %5level %logger - %message%newline"/>
    </layout>
  </appender>
  <root>
    <!--all priority options： OFF、FATAL、ERROR, WARN, INFO, DEBUG, ALL-->
    <priority value="INFO"/>
    <appender-ref ref="consoleAppender"/>
    <appender-ref ref="defaultAppender"/>
  </root>
</log4net>